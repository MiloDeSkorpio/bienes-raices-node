extends ../layout/index 

block contenido
  div(class="py-7")
    
    h2(class="text-center text-2xl font-bold")= pagina
    if errores
      div(class="max-w-md mx-auto my-10")
        each error in errores
          p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg
    div(class="mt-8 mx-auto max-w-md")
      div(class="bg-white py-8 px-4 shadow")
        form.space-y-5(method="POST" action="/auth/registro" novalidate) 
          input(type="hidden" name="_csrf" value= csrfToken)
          div
            label(for="nombre" class="block text-sm uppercase text-gray-500 mb-2 font-bold" ) Tu Nombre
            input(id="nombre" placeholder="Tu Nombre" type="text" name="nombre" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray400" value= usuario ? usuario.nombre : '')
          div
            label(for="email" class="block text-sm uppercase text-gray-500 mb-2 font-bold" ) Email de Registro
            input(id="email" placeholder="Tu Email" type="email" name="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray400" value= usuario ? usuario.email : '')
          div
            label(for="password" class="block text-sm uppercase text-gray-500 mb-2 font-bold" ) Password
            input(id="password" placeholder="Tu Password" type="password" name="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray400")
          div
            label(for="repetir_password" class="block text-sm uppercase text-gray-500 mb-2 font-bold" ) Repetir Password 
            input(id="repetir_password" placeholder="Repetite tu Password" type="password" name="repetir_password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray400")
          div(class="flex items-center justify-between")
            a(class="text-gray-500 text-xs" href="/auth/login") ¿Ya yienes cuenta? Inicia Sesión
            a(class="text-gray-500 text-xs" href="/auth/olvide-password") Olvide mi password
          input(type="submit" value="Crear Cuenta" class="w-full bg-sky-600 hover:bg-sky-800 text-white font-bold py-3 cursor-pointer rounded-md")