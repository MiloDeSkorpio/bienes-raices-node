extends ./layout/app

block contenido 
  if propiedades.length 
    div(class="flex justify-center w-full bg-white shadow rounded-lg mt-6 p-4")
      ul(class="divide-y divide-gray-200")
        each propiedad in propiedades  
          li  
            div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 md:space-y-0 gap-4")
              div(class="sm:w-2/4 md:w-1/6")
                img(src=`uploads/${propiedad.imagen}` alt=`Imagen propiedad ${propiedad.titulo}` class="w-full block") 
              div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 space-y-3")
                a(class="block text-2xl font-extrabold text-dkblue-600 truncate" href=`/propiedad/${propiedad.id}`)= propiedad.titulo   
              div(class="sm:w-1/4 md:w-2/6 lg:w-1/6/ flex flex-col gap-2 lg:flex-row")
                each favorito in favoritos
                  if favorito.propiedadId === propiedad.id
                    form(method="POST" action=`adm/eliminar-favorito/${favorito.id}`)
                      input(type="submit" class=`w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold rounded cursor-pointer bg-red-100 text-red-800` value=`Eliminar`) 
      div(class="h-9")
  else
    div(class="flex justify-center w-full")
    div(class="bg-white shadow rounded-lg p-4 text-center w-11/12")
        p Aun no agregas favoritos