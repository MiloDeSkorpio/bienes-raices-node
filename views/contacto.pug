extends ./layout/app

block contenido 
  section(class="py-5")
    h2(class="text-center text-4xl font-extrabold pt-10")= pagina
    div
      form(action="procesar_formulario.php", method="post" class="max-w-md mx-auto p-4 bg-white shadow-md rounded-lg")
        label(for="nombre" class="block mb-2 font-medium") Nombre:
        input(type="text", id="nombre", name="nombre", required class="w-full px-3 py-2 mb-4 border rounded-lg focus:outline-none focus:border-blue-500")

        label(for="email" class="block mb-2 font-medium") Email:
        input(type="email", id="email", name="email", required class="w-full px-3 py-2 mb-4 border rounded-lg focus:outline-none focus:border-blue-500")

        label(for="asunto" class="block mb-2 font-medium") Asunto:
        input(type="text", id="asunto", name="asunto", required class="w-full px-3 py-2 mb-4 border rounded-lg focus:outline-none focus:border-blue-500")

        label(for="mensaje" class="block mb-2 font-medium") Mensaje:
        textarea(id="mensaje", name="mensaje", rows="4", required class="w-full px-3 py-2 mb-4 border rounded-lg resize-none focus:outline-none focus:border-blue-500")

        button(type="submit" class="w-full px-4 py-2 text-white bg-blue-500 rounded-lg hover:bg-blue-600 focus:outline-none focus:bg-blue-600") Enviar

