extends ../layout/admin 

block contenido 
  div(class='py-10')
    if errores
          div(class="max-w-md mx-auto my-10")
            each error in errores
              p(class=' bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold')= error.msg
    h1(class='text-4xl font-extrabold text-center') Administracion de Categorias
    div(class=' mt-8 mx-auto max-w-md')
      div(class=' bg-white py-8 px-4 shadow')
        h2(class='text-center text-2xl font-bold text-gray-600') Nuevas Categorias
        form(method="POST" action="/adm/crear-categoria" class='space-y-5')
          input(type="hidden" name="_csrf" value= csrfToken)
          div
            label(for="nombre" class='block text-sm uppercase text-gray-600 mb-3 font-bold') Nombre de Categoria
            input(placeholder="Ej. Casa" type="text" name="nombre" id='nombre' class=' w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400')
          input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Guardar Nueva Categoria")