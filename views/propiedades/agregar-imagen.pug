extends ../layout/admin
block styles
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
block contenido 
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        div(  class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10" data-max-files="10")
          form(enctype="multipart/form-data" id="imagen" method="POST" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" action=`/propiedades/agregar-imagen/${propiedad.id}` )

          button(id="publicar" class="mt-5 w-full py-3 bg-sky-600 hover:bg-sky-800 rounded text-white font-bold uppercase cursor-pointer" type="button") Publicar Propiedad


block scripts
  script(src="/js/agregarImagen.js")
  script(src="/js/menu.js") 

                    